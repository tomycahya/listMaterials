<mvc:View
    controllerName="project1.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <ObjectPageLayout
        id="opportunityPage"
        showHeaderContent="true"
        useIconTabBar="true"
        showFooter="true"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle"
            >
                <!-- Heading saat header dalam mode penuh -->
                <heading>
                    <m:VBox id="_IDGenVBox">
                        <m:Title
                            id="_IDGenTitle1"
                            text="Detail Materials {= ${/materialno} }"
                            level="H2"
                        />
                        <m:Text
                            id="_IDGenText1"
                            text="{/materialdescription}"
                        />
                    </m:VBox>
                </heading>

                <!-- Heading saat header mengecil (snap mode) -->
                <snappedHeading>
                    <m:Title
                        id="_IDGenTitle2"
                        text="Master Proposal: New"
                        level="H4"
                    />
                </snappedHeading>

                <!-- Tombol aksi -->
                <actions>
                    <m:Button
                        id="_IDGenButton"
                        text="New"
                        enabled="false"
                    />
                    <m:Button
                        id="_IDGenButton1"
                        text="Edit"
                    />
                    <m:Button
                        id="_IDGenButton2"
                        text="Delete"
                    />
                    <m:Button
                        id="_IDGenButton3"
                        text="Copy"
                    />
                    <!-- <m:Button
                        id="_IDGenButton4"
                        text="Create Follow-Up"
                        enabled="false"
                    />
                    <m:Button
                        id="_IDGenButton5"
                        text="Trigger Output"
                        type="Emphasized"
                    /> -->
                    <m:MenuButton
                        id="_IDGenMenuButton"
                        type="Transparent"
                        icon="sap-icon://overflow"
                        menuPosition="EndTop"
                    >
                        <m:menu>
                            <m:Menu id="_IDGenMenu">
                                <m:MenuItem id="_IDGenMenuItem"
                                    text="Preview Output"
                                    press="onPreviewOutput"
                                />
                                <m:MenuItem id="_IDGenMenuItem1"
                                    text="Sales Assistant"
                                    enabled="false"
                                />
                                <m:MenuItem id="_IDGenMenuItem2"
                                    text="Distribute"
                                    enabled="false"
                                />
                                <m:MenuItem id="_IDGenMenuItem3"
                                    text="My DashBoard"
                                    icon="sap-icon://home"
                                    press="onDashboard"
                                />
                                <m:MenuItem id="_IDGenMenuItem4"
                                    text="Personalize"
                                    icon="sap-icon://action-settings"
                                    press="onPersonalize"
                                />
                                <m:MenuItem id="_IDGenMenuItem5"
                                    text="Print Page"
                                    icon="sap-icon://print"
                                    press="onPrint"
                                />
                            </m:Menu>
                        </m:menu>
                    </m:MenuButton>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <sections>
            <ObjectPageSection
                id="_IDGenObjectPageSection"
                title="Opportunity Details"
            >
                <ObjectPageSubSection id="_IDGenObjectPageSubSection">
                    <blocks>
                        <m:Text
                            id="_IDGenText2"
                            text="Opportunity Details content goes here."
                        />
                    </blocks>
                </ObjectPageSubSection>
            </ObjectPageSection>

            <!-- Tab lainnya -->
            <ObjectPageSection
                id="_IDGenObjectPageSection1"
                title="Parties Involved"
            >
                <ObjectPageSubSection id="_IDGenObjectPageSubSection1">
                    <blocks>
                        <m:Text
                            id="_IDGenText3"
                            text="Parties involved content goes here."
                        />
                    </blocks>
                </ObjectPageSubSection>
            </ObjectPageSection>

            <ObjectPageSection
                id="_IDGenObjectPageSection2"
                title="Organizational Data"
            >
                <ObjectPageSubSection id="_IDGenObjectPageSubSection2">
                    <blocks>
                        <m:Text
                            id="_IDGenText4"
                            text="Organizational data content goes here."
                        />
                    </blocks>
                </ObjectPageSubSection>
            </ObjectPageSection>
        </sections>

        <!-- <footer>
            <m:Bar id="_IDGenBar">
                <m:contentRight>
                    <m:Button
                        id="_IDGenButton6"
                        text="Save"
                        type="Emphasized"
                        press="onSave"
                    />
                    <m:Button
                        id="_IDGenButton7"
                        text="Cancel"
                        press="onCancel"
                    />
                </m:contentRight>
            </m:Bar>
        </footer> -->
    </ObjectPageLayout>
</mvc:View>
