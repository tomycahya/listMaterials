<mvc:View
    controllerName="project1.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    height="100%"
>
    <Page
        id="page2"
        title="{i18n>listMaterial}"
        showHeader="true"
        class="sapUiResponsiveContentPadding"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <ObjectHeader
                title="{/materialno}"
                id="object"
                backgroundDesign="Solid"
                responsive="true"
                fullScreenOptimized="true"
                icon="sap-icon://product"
                intro="{/materialdescription}"
                titleActive="true"
                class="sapUiResponsivePadding--header"
                number="{/Netweight}"
                numberUnit="{/Weightunit}"
                numberState="Success"
            >
                <attributes>
                    <ObjectAttribute
                        id="oattr"
                        title="Material Group"
                        text="{/materialGroup}"

                    />
                    <ObjectAttribute
                        id="oattr2"
                        title="Material Type"
                        text="{/materialtypecode}"
                    />
                </attributes>
                <statuses>
                    <ObjectStatus
                        text="{/storagelocationcode}"
                        id="ObjectStatus2"
                        title="Storage Location"
                    />
                </statuses>
            </ObjectHeader>

            <IconTabBar
                id="icon1"
                selectedKey="key3"
                class="sapUiResponsiveContentPadding"
            >
                <items>
                    <IconTabFilter
                        id="iconfilter"
                        key="details"
                        text="Details"
                        icon="sap-icon://detail-view"
                    >
                        <!-- <f:SimpleForm
                            id="smpleform"
                            backgroundDesign="Solid"
                            layout="ResponsiveGridLayout"
                            labelSpanL="3"
                            labelSpanM="3"
                            emptySpanL="4"
                            emptySpanM="4"
                        > -->
                            <!-- <f:content>
                                <Label
                                    id="label1"
                                    text="Product ID."
                                />
                                <Text
                                    id="text1"
                                    text="{productModel>/ID}"
                                />
                                <Label
                                    id="label"
                                    text="Product Name"
                                />
                                <Text
                                    id="text"
                                    text="{productModel>/Name}"
                                />
                                <Label
                                    id="labelPrice"
                                    text="Product Price"
                                />
                                <Text
                                    id="textPrice"
                                    text="{
                                        parts: [
                                            {path: 'productModel>/Price'},
                                            {path: 'USD'}
                                        ],
                                        type: 'sap.ui.model.type.Currency',
                                        formatOptions: {showMeasure: false}
                                    }"
                                />
                            </f:content> -->
                            <Text id="text1" text="Details Content"></Text>
                        <!-- </f:SimpleForm> -->
                    </IconTabFilter>
                    <IconTabFilter
                        id="_IDGenIconTabFilter"
                        key="attachments"
                        icon="sap-icon://attachment"
                        count="3"
                    >
                        <Text
                            id="_IDGenText1"
                            text="Attachments go here ..."
                        />
                    </IconTabFilter>
                    <IconTabFilter
                        id="_IDGenIconTabFilter1"
                        key="notes"
                        icon="sap-icon://notes"
                        count="12"
                    >
                        <Text
                            id="_IDGenText2"
                            text="Notes go here ..."
                        />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Bar
                id="barDetail"
                design="Footer"
            >
                <contentRight>
                    <Button
                        id="editButton"
                        type="Default"
                        press="onUpdate"
                        text="Edit Materials"
                        icon="sap-icon://edit"
                    />
                    <Button
                        id="deleteButton"
                        text="Delete Materials"
                        type="Reject"
                        press="onDelete"
                        icon="sap-icon://delete"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
